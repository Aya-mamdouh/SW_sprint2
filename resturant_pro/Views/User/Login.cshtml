@model resturant_pro.Models.User
@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>
<body style="background-image:url('../../images/backgrond.jpg');">
    @using (Html.BeginForm("Authorize", "User", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.UserName)
            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.UserName)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Password)
        </div>

        <input type="submit" name="name" value="sign in" style="margin:8px;" class="btn btn-primary" />

        <input type="submit" name="name" value="Clear" style="margin:8px;" class="btn btn-primary" />
        <n/>
        <div class="form-group">
            <input type="button" onclick="location.href='@Url.Action("AddOrEdit", "User")'" value="sign up" class="btn btn-info" />
        </div>

    }
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>