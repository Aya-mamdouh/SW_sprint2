



@model IEnumerable<resturant_pro.Models.Meal>

@{

    ViewBag.Title = "search";
}


<h2>Welcom To Our Restueant</h2>
<body style="background-image:url('../../images/666.jpg');">
    





    @using (Html.BeginForm("Index", "Meal", FormMethod.Get))
    {

        @Html.TextBox("Searching")<input type="submit" value="search" />

    }

    <div class="col-md-4">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>


                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th></th>
            </tr>


            @foreach (var item in Model)
            {

                <tr>


                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>


                    <td>
                        <img src="@Url.Content(item.Image)" width="120" height="120" />
                    </td>
                    <td>


                        @Html.ActionLink("Details", "Details", new { id = item.MealId }, new { @class = "btn btn-primary" })
                        <br />

                        <a href="@Url.Action("order_now" ,"Orders" ,new { id= item.MealId  })" style="color: white" class="btn btn-success">order</a>
                        <br />
                    </td>

                </tr>


            }

        </table>






    </div>
</body>